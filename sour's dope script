-- LocalScript (StarterPlayerScripts or StarterGui)
local Players = game:GetService("Players")
local plr = Players.LocalPlayer
local playerGui = plr:WaitForChild("PlayerGui")

local gui = Instance.new("ScreenGui")
gui.Name = "DarkFrameGUI"
gui.ResetOnSpawn = false
gui.Parent = playerGui

local mainbar = Instance.new("Frame")
mainbar.Name = "DarkFrame"
mainbar.Size = UDim2.new(0, 500, 0, 30)
mainbar.Position = UDim2.fromScale(0.5, 0.5)
mainbar.AnchorPoint = Vector2.new(0.5, 0.5)
mainbar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainbar.BorderSizePixel = 0
mainbar.Parent = gui

-- DRAGGING LOGIC
local UIS = game:GetService("UserInputService")
local dragging = false
local dragStart
local startPos

mainbar.Active = true
mainbar.Selectable = true

local function update(input)
	local delta = input.Position - dragStart
	mainbar.Position = UDim2.new(
		startPos.X.Scale,
		startPos.X.Offset + delta.X,
		startPos.Y.Scale,
		startPos.Y.Offset + delta.Y
	)
end

mainbar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = mainbar.Position
	end
end)

mainbar.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		if dragging then
			update(input)
		end
	end
end)

UIS.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = false
	end
end)

